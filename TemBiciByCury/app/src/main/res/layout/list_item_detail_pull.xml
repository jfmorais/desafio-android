<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pull_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="repo name" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pull_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_goneMarginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/pull_repo_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/pull_img"
        android:layout_marginBottom="10dp"
        android:text="TEXT TEXTE TEXTTEXTElkklsdjkslfjlksdflksdhfklsdfklsdjflksdjfkldsjfkldsjlkfjsdklfjsdlkfjlksdjflksTEXGST" />

    <ImageView
        android:id="@+id/pull_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintTop_toBottomOf="@id/pull_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/pull_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/pull_img"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="real name" />

</androidx.constraintlayout.widget.ConstraintLayout>
