<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/item_profile_img"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_placeholder"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="repo name" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_author_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/item_profile_img"
        app:layout_constraintRight_toRightOf="parent"
        android:text="username" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/item_author_username"
        app:layout_constraintRight_toRightOf="parent"
        android:text="real name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        app:layout_goneMarginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_repo_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_profile_img"
        app:layout_constraintBottom_toTopOf="@id/item_forks"
        android:text="TEXT TEXTE TEXTTEXTElkklsdjkslfjlksdflksdhfklsdfklsdjflksdjfkldsjfkldsjlkfjsdklfjsdlkfjlksdjflksTEXGST" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_forks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Forks: 999999"
        android:textColor="@color/primary_text"
        app:layout_constraintTop_toBottomOf="@id/item_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_img"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/star"
        app:layout_constraintTop_toBottomOf="@id/item_description"
        app:layout_constraintLeft_toRightOf="@id/item_forks"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_text"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:text="999999"
        app:layout_constraintTop_toBottomOf="@id/item_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/item_img" />

</androidx.constraintlayout.widget.ConstraintLayout>
